function ArrayChallenge(arr){
  
  for(let i = 0; i < arr.length; i++){
    if(arr[0] < arr[1]){
      if(arr[i] > arr[i+1]){
        return arr.indexOf(arr[i])
      }
    }
    if(arr[0] > arr[1]){
      if(arr[i] < arr[i+1]){
        return arr.indexOf(arr[i])
      }
    }
  }
  return -1;
}

console.log(ArrayChallenge([1,2,3,4,5,6,5]))
